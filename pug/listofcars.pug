extends template.pug
include navbar.pug
block content
    +navbar()
    .list-of-cars-content
        details.first-details
            summary График
            form
                table
                    tr
                        th Значение по оси ОХ
                        th Результат
                    tr
                        td
                            input(type="radio" name="one" value="first")
                            | Марка<br>
                            input(type="radio" name="one" value="second")
                            | Название<br>
                            input(type="radio" name="one" value="third")
                            |Страна<br>
                        td 
